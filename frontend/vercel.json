{
  "rewrites": [
    { 
      "source": "/product/:id", 
      "destination": "/api/product/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(facebookexternalhit|Facebot|Twitterbot|LinkedInBot|WhatsApp|Slackbot|SkypeUriPreview|Applebot|Googlebot|bingbot|Slurp|DuckDuckBot|Baiduspider|YandexBot|Sogou|Exabot|ia_archiver|bot|crawler|spider).*"
        }
      ]
    },
    { "source": "/(.*)", "destination": "/" }
  ]
}
